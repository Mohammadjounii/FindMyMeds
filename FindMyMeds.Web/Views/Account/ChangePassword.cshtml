@model FindMyMeds.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card-box">
            <h4 class="mb-3">🔐 Change Password</h4>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input asp-for="OldPassword" type="password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                </div>

                <button class="btn btn-primary-soft w-100">
                    Update Password
                </button>
            </form>
        </div>

    </div>
</div>
