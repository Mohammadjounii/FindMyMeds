@model List<FindMyMeds.Core.ViewModels.MedicationAvailabilityViewModel>

@if (Model.Count > 0)
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="med-card">

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="med-name">
                            <a class="details-link text-decoration-none"
                               onclick="showMedicationDetails(@item.MedicationId, @item.PharmacyId)">
                                @item.MedicationName
                            </a>
                        </span>

                        <span class="badge-qty">
                            Qty: @item.Quantity
                        </span>
                    </div>

                    <div class="med-meta">
                        <i class="bi bi-geo-alt"></i> @item.City
                    </div>

                    <div class="med-meta mt-1">
                        <i class="bi bi-hospital"></i>
                        @if (item.PharmacyName != "Not Available")
                        {
                            <a class="fw-semibold text-decoration-none"
                               asp-controller="Pharmacies"
                               asp-action="Details"
                               asp-route-id="@item.PharmacyId">
                                @item.PharmacyName
                            </a>
                        }
                        else
                        {
                            @item.PharmacyName
                        }
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="price">
                        @(item.Price.HasValue
                                            ? item.Price.Value.ToString("0.00") + " $"
                                            : "—")
                        </span>

                        <a class="details-link text-primary"
                           onclick="showMedicationDetails(@item.MedicationId, @item.PharmacyId)">
                            Details
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
}
else
{
    <div class="no-results">
        <i class="bi bi-search fs-1 mb-3"></i>
        <p>No medications found.</p>
    </div>
}
